.I type statistics 
= {
 num_bindings : 
.B int
;  (* Number of bindings present in the table\&.
Same value as returned by 
.B Hashtbl\&.length
\&. *) 
 num_buckets : 
.B int
;  (* Number of buckets in the table\&. *) 
 max_bucket_length : 
.B int
;  (* Maximal number of bindings per bucket\&. *) 
